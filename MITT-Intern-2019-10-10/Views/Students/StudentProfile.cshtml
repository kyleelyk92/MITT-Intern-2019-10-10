@model MITT_Intern_2019_10_10.Models.StudentViewModel

@{
    ViewBag.Title = "StudentProfile";
}

<h2>StudentProfile</h2>

<div id="MainContainer" class="mainContainer">
    <!--Top section will have both images, layered with profile picture on top-->
    <div id="topSection" class="topSection">


        @if (Model.HeaderImage != null && Model.ProfileImage != null)
        {
            <div class="imageSection" style="background-image: url('../../uploads/@Model.Id/headerImage/@Model.HeaderImage')">
                <!--<img id="headerImg" class="headerImg" style="" src="~/uploads/@Model.Id/headerImage/@Model.HeaderImage" alt="avatar" />
            -->
                <img id="profileImg" class="profileImg" style="" src="~/uploads/@Model.Id/profileImage/@Model.ProfileImage" alt="avatar" />

            </div>
        }
        else if (Model.HeaderImage != null && Model.ProfileImage == null)
        {
            <div class="imageSection" style="background-image: url('../../uploads/@Model.Id/headerImage/@Model.HeaderImage')">
                <!--<img id="headerImg" class="headerImg" style="" src="~/uploads/@Model.Id/headerImage/@Model.HeaderImage" alt="avatar" />
            -->
                <img id="profileImg" class="profileImg" style="" src="~/DefaultImages/avatar1.png" alt="avatar" />

            </div>
        }
        else if (Model.HeaderImage == null && Model.ProfileImage != null)
        {
            <div class="imageSection" style="background-image: url('https://macrovista.com/wp-content/uploads/2018/02/header-placeholder.png')">
                <!--<img id="headerImg" class="headerImg" style="" src="~/uploads/@Model.Id/headerImage/@Model.HeaderImage" alt="avatar" />
            -->
                <img id="profileImg" class="profileImg" style="" src="~/uploads/@Model.Id/profileImage/@Model.ProfileImage" alt="avatar" />

            </div>
        }
        else
        {
            <div class="imageSection" style="background-image: url('https://macrovista.com/wp-content/uploads/2018/02/header-placeholder.png')">
                <!--<img id="headerImg" class="headerImg" style="" src="~/uploads/@Model.Id/headerImage/@Model.HeaderImage" alt="avatar" />
            -->
                <img id="profileImg" class="profileImg" style="" src="~/DefaultImages/avatar1.png" alt="avatar" />

            </div>
        }

        <!--Set the height and stuff up in here-->

    </div>
    <div id="bottomSection" style="display:flex; flex-direction: row">
        <div id="bottomLeftSection" class="bottomLeftSection">
            <div class="bioSection" id="bioSection">
                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <th scope="col">@Html.LabelFor(model => model.FirstName)</th>
                            <td>
                                @Model.FirstName
                            </td>
                        <tr>
                            <th scope="col">@Html.LabelFor(model => model.LastName)</th>
                            <td>
                                @Model.LastName
                            </td>
                        </tr>
                        <tr>
                            <th scope="col">@Html.LabelFor(model => model.UserName)</th>
                            <td>
                                @Model.UserName
                            </td>
                        </tr>
                        @if (@Model.SchoolProgram != null)
                        {
                            <tr>
                                <th scope="col">@Html.LabelFor(model => model.SchoolProgram.Title)</th>
                                <td>
                                    @Model.SchoolProgram.Title
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>

            </div>
        </div>
        <div id="bottomRightSection" class="bottomRightSection">
            <div><h3>Skills:</h3></div>
            <ul>
                @foreach (var skill in Model.Skills)
                {
                    <li>@skill.Name</li>
                }
            </ul>
        </div>
    </div>
</div>

@section Scripts{
    @Styles.Render("~/bundles/StudentProfileStyles")
}